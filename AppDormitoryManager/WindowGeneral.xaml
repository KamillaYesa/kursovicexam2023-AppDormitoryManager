<Window x:Class="AppDormitoryManager.WindowGeneral"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppDormitoryManager"
        mc:Ignorable="d"
        Title="Главное меню" Height="400" Width="600">
    <Grid>

        <StackPanel Orientation="Vertical" >
            <Image Source="IMG/iconavto.png" Height="160" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="70 20"/>
            <Label x:Name="UserInfoLabel" Content="" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20">
            <Button Content="Жильцы" Click="btnTenant_Click" Height="50" Width="120" Margin="40 30"/>
            <Button Content="Квитанция" Click="btnReceipt_Click" Height="50" Width="120" Margin="40 30"/>
        </StackPanel>

        <Button Style="{StaticResource nbb}" Click="btnVCL_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Height="40" Margin="10">
            <Image Source="img/exit.png" />
        </Button>

    </Grid>
</Window>
